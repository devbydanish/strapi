{
  "kind": "collectionType",
  "collectionName": "listings",
  "info": {
    "singularName": "listing",
    "pluralName": "listings",
    "displayName": "Listing",
    "description": "All property listings"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "subtitle": {
      "type": "string"
    },
    "description": {
      "type": "richtext"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "phone": {
      "type": "string"
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "price": {
      "type": "decimal"
    },
    "address": {
      "type": "string"
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "approvalStatus": {
      "type": "enumeration",
      "enum": [
        "draft",
        "published",
        "pending",
        "approved",
        "rejected"
      ],
      "default": "draft"
    },
    "homepagePosition": {
      "type": "integer"
    },
    "categoryPosition": {
      "type": "integer"
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "listings"
    },
    "city": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::city.city",
      "inversedBy": "listings"
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag",
      "inversedBy": "listings"
    },
    "linkTargetType": {
      "type": "enumeration",
      "enum": [
        "internal",
        "external",
        "bbs"
      ],
      "default": "internal"
    },
    "linkTargetValue": {
      "type": "string"
    },
    "websiteUrl": {
      "type": "string"
    },
    "bbsThreadUrl": {
      "type": "string"
    },
    "advertiserId": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "listings"
    }
  }
}
