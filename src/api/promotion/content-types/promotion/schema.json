{
  "kind": "collectionType",
  "collectionName": "promotions",
  "info": {
    "singularName": "promotion",
    "pluralName": "promotions",
    "displayName": "Promotion",
    "description": "Banners and promotional content"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "link": {
      "type": "string"
    },
    "placement": {
      "type": "enumeration",
      "enum": [
        "home",
        "listings",
        "sidebar",
        "footer"
      ],
      "default": "home"
    },
    "active": {
      "type": "boolean",
      "default": true
    },
    "startDate": {
      "type": "date"
    },
    "endDate": {
      "type": "date"
    }
  }
}
